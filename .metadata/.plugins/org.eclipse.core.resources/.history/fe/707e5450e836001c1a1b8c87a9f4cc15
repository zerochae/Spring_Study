<mapper namespace="book">

	<insert id="insert">
		INSERT INTO BOOK(BOOK_ID, TITLE, CATEGORY, PRICE, INSERT_DATE)
		VALUES ( 
		
		(SELECT NVL(MAX(BOOK_ID),0)+1 FROM BOOK), #{title},#{category},#{price},SYSDATE)
	</insert>

</mapper>