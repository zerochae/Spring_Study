<%@page import="java.net.URLEncoder"%>
<%@ page language="java" contentType="text/html; charset=UTF-8" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%

	// 한글 처리를 위해 인코딩 유형 설정
	
	request.setCharacterEncoding("UTF-8");

	// 폼 페이지에서 전송된 파라미터 목록을 통해 쿠키로 생성
	
	Cookie cartId = new Cookie("Shipping_cartId",URLEncoder.encode(request.getParameter("cartId"),"UTF-8"));
	Cookie name = new Cookie("Shipping_cartName",URLEncoder.encode(request.getParameter("name"),"UTF-8"));
	Cookie shippingDate = new Cookie("Shipping_country",URLEncoder.encode(request.getParameter("shippingDate"),"UTF-8"));

%>
<!DOCTYPE html>
<html>
<head>
<title>Insert title here</title>
</head>
<body>

</body>
</html>